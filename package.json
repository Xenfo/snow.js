{
  "name": "snow.js",
  "version": "0.0.1",
  "description": "A framework for Discord.JS",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/Xenfo/snow.js",
  "author": "Samuel Corsi-House <chouse.samuel@gmail.com>",
  "license": "MIT",
  "scripts": {
    "postinstall": "is-ci || husky install",
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx --fix .",
    "lint:prettier": "prettier --write --ignore-path .gitignore *.json"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "doctoc": "^2.0.1",
    "eslint": "^7.32.0",
    "eslint-config-marine": "^9.0.6",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "is-ci": "^3.0.0",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "discord.js": "^13.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
